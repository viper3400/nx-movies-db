{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackagePatterns": [
        "^jaxx\\/.*$"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": true
    },
    {
      "groupName": "g: graphql-apollo",
      "matchPackageNames": [
        "/^@apollo//",
        "/^graphql$/",
        "/^graphql-/",
        "/^@graphql-/",
        "/^@pothos//",
        "/^graphql-yoga$/",
        "/^graphql-scalars$/"
      ]
    },
    {
      "groupName": "g: storybook",
      "separateMajorMinor": true,
      "automerge": false,
      "labels": [
        "deps",
        "storybook"
      ],
      "matchPackageNames": [
        "/^storybook$/",
        "/^@storybook//",
        "/^@chromatic-com/storybook$/",
        "/eslint-plugin-storybook/"
      ]
    },
    {
      "description": "Pin MySQL Docker images to 8.x and block v9 upgrades",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "mysql"
      ],
      "allowedVersions": "<9",
      "matchManagers": [
        "docker-compose"
      ]
    }
  ]
}