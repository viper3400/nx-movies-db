{
  "name": "workspace",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": true,
        "commands": [
          {
            "command": "nx run movies-service:serve"
          },
          {
            "command": "nx run movies-ui:dev"
          }
        ]
      }
    },
    "build-all": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run movies-service:build"
          },
          {
            "command": "nx run movies-ui:build"
          }
        ]
      }
    },
    "generate-docs": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./tools/docs/generate-video-docs.mjs"
      }
    }
  }
}