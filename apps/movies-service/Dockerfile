# Run the container with `docker run -p 3000:3000 -t movies-service`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system movies-service && \
          adduser --system -G movies-service movies-service

COPY dist/apps/movies-service movies-service/
RUN chown -R movies-service:movies-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix movies-service --omit=dev -f install

CMD [ "node", "movies-service" ]
