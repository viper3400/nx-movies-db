FROM node:22 AS builder

# Set the working directory
WORKDIR /staging

# # Copy the rest of the source code
COPY . .
RUN rm -rf node_modules
RUN rm -rf dist
RUN rm -rf .nx
RUN rm -rf ./apps/movies-service/.env.local

# Install dependencies
RUN npm install

# # Compile TypeScript to JavaScript
RUN npx nx build movies-service

# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build movies-service`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t movies-service`.
FROM node:22

#ENV HOST=0.0.0.0
#ENV PORT=7100

WORKDIR /app

RUN addgroup --system movies-service && \
          adduser --system -G movies-service movies-service

COPY --from=builder /staging/dist/apps/movies-service movies-service/
COPY --from=builder /staging/node_modules node_modules

RUN chown -R movies-service:movies-service .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
# RUN npm --prefix movies-service --omit=dev -f install

EXPOSE 7100

CMD [ "node", "movies-service" ]
